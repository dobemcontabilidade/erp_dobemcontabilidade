            </column>
            <column name="cnpj" type="varchar(14)">
                <constraints nullable="true" />
            </column>
            <column name="remuneracao_empresa" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="observacoes" type="varchar(200)">
                <constraints nullable="true" />
            </column>
            <column name="salario_fixo" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="salario_variavel" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="valor_salario_fixo" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="data_termino_contrato" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="numero_inscricao" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="codigo_lotacao" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="descricao_complementar" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="descricao_cargo" type="varchar(200)">
                <constraints nullable="true" />
            </column>
            <column name="observacao_jornada_trabalho" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="media_horas_trabalhadas_semana" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="regime_previdenciario" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="unidade_pagamento_salario" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="jornada_especial" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="tipo_inscricao_empresa_vinculada" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="tipo_contrato_trabalho" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="tipo_regime_trabalho" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="dias_da_semana" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="tipo_jornada_empresa_vinculada" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="funcionario_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->

